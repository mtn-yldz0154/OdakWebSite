@using DentistCalendar.Data.Entity;

@model IEnumerable<AppRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <br />
        <h1 class="h2">Rol Listesi</h1>
        <hr>

        <table class="table table-dark table-hover table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 390px;">Id</td>
                    <td>Role Name</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                <a href="/admin/DeleteRole/@item.Id" class="btn btn-danger btn-sm mr-2">Sil</a>

                               
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>

<a class="btn btn-primary ml-3" href="/admin/addrole">Rol Oluştur</a>