
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminLayout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
    @RenderSection("Css",false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    @RenderSection("Styles", false)
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Yönetici Paneli</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/user/index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/randevu">Randevu Tablosu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/comments">Gelen Yorumlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/blogs">Bloglar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/rolelist">Rol İşlemleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/userlist">Kullanıcı İşlemleri</a>
                    </li>
                   
                </ul>
                    <a class="nav-link active text-light" >Sn. @User.Identity.Name</a>
                <a class="nav-link active text-light" href="/account/logout">Çıkış Yap</a>
               
            </div>
        </div>
    </nav>


    @RenderBody()
    
   
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

    @RenderSection("Scripts", required: false)
   
 
</body>
</html>
